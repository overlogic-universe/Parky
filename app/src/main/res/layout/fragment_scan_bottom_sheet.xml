<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="25dp"
    android:background="@drawable/bottom_sheet_shape"
    tools:context=".fragment.ScanBottomSheetFragment">

    <ImageView
        android:id="@+id/iv_parky_logo_bottom_sheet"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/logo_parky_with_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back_from_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arahkan_kamera_anda_untuk_memindai_kode_qr"
        android:textColor="@color/grey"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_parky_logo_bottom_sheet"
        />

</androidx.constraintlayout.widget.ConstraintLayout>